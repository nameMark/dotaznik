<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="show"
        android:text="Button" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Zadajte text..."
        android:inputType="textPassword"
        android:maxLines="1" />

    <RadioGroup
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/otazka1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ake je tvoje pohlavie?" />

        <RadioButton
            android:id="@+id/muz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muz" />
n        <RadioButton
            android:id="@+id/zena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zena" />

        <RadioButton
            android:id="@+id/nechcemZadat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nechcem zadat" />
    </RadioGroup>

    <RadioGroup
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/otazka2">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Co mas najradsej" />

        <RadioButton
            android:id="@+id/zmrzlinu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zmrzlinu" />

        <RadioButton
            android:id="@+id/cokoladu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cokoladu" />

        <RadioButton
            android:id="@+id/cipsy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cipsy" />

    </RadioGroup>
</LinearLayout>